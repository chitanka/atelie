<table class="table table-striped table-condensed table-bordered">
<thead>
	<tr>
		<th>Дата</th>
		{% if userIsAdmin is defined and userIsAdmin %}
			<th title="Администраторски статус"></th>
		{% endif %}
		<th title="Тип на записа"></th>
		<th title="Информация"></th>
		<th title="Коментари към записа"></th>
		<th title="Файл"></th>
		<th style="width: 25%">Заглавие</th>
		<th>Автор</th>
		<th>Етап на работата</th>
		<th>Потребител</th>
	</tr>
</thead>
<tbody>
{% for entry in entries %}
	<tr class="{{ cycle(['even', 'odd'], loop.index) }} {{ entry.isFrozen ? 'frozen' : '' }} {{ entry.hasParticipant(app.user) ? 'hilite' : '' }}" id="e{{ entry.id }}">
		{% include 'WorkEntry/item.html.twig' %}
	</tr>
{% endfor %}
</tbody>
</table>
